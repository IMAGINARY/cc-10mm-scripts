#!/bin/bash

# Include download helper
. "$(dirname -- "$0")/../internal/download-helper"

install-vlc

INSTALL_DIR="/opt/zoom-the-scientists-video"
PLAYLIST_FILE="${INSTALL_DIR}/playlist.m3u"

mkdir -p "${INSTALL_DIR}"

URLS=(
  "https://imaginarymedia.s3.eu-central-1.amazonaws.com/10mm_climate_crisis/ZoomTheScientists/edited_videos/Zoom-Scientists-Test_1024x600.mp4"
)

download_all "$INSTALL_DIR" "${URLS[@]}"

# Create the playlist file
for url in "${URLS[@]}"; do
  filename "$url"
done >"${PLAYLIST_FILE}"

exit $?
